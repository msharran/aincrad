// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-space": ["task::Spawn", { "task_name": "zed-sessioniser" }]
    }
  },
  {
    "bindings": {
      // navigation
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      // pane resize
      "ctrl-shift-h": "vim::ResizePaneLeft",
      "ctrl-shift-l": "vim::ResizePaneRight",
      "ctrl-shift-k": "vim::ResizePaneUp",
      "ctrl-shift-j": "vim::ResizePaneDown",
      // agents
      "cmd-shift-c": ["task::Spawn", { "task_name": "claude-code" }],
      "cmd-shift-l": "pane::SplitAndMoveRight"
      // "cmd-shift-c": [
      //   "agent::NewExternalAgentThread",
      //   { "agent": "claude_code" }
      // ]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-b space": "terminal::ToggleViMode"
      // "cmd-k cmd-k": ["terminal::SendKeystroke", "cmd-l"]
    }
  },
  {
    // Vim normal and visual mode
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "g E": "diagnostics::Deploy",
      "W": "vim::NextSubwordStart",
      "B": "vim::PreviousSubwordStart",
      "E": "vim::NextSubwordEnd",
      "s": "vim::PushSneak",
      "S": "vim::PushSneakBackward"
    }
  }
]
