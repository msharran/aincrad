// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "buffer_font_size": 13,
  "ui_font_size": 14,
  "agent_font_size": 15,
  "pane_split_direction_vertical": "right",
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "plan": {
        "name": "Plan",
        "tools": {
          "diagnostics": true,
          "fetch": true,
          "find_path": true,
          "grep": true,
          "list_directory": true,
          "now": true,
          "open": true,
          "project_notifications": true,
          "read_file": true,
          "terminal": true,
          "thinking": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-20250514"
    },
    "default_profile": "ask",
    "inline_assistant_model": {
      "provider": "openai",
      "model": "claude-4-sonnet"
    },
    "model_parameters": []
  },
  "auto_update_extensions": {
    "go-snippets": false
  },
  "project_panel": {
    "hide_gitignore": false
  },
  "edit_predictions": {
    "mode": "eager",
    "enabled_in_text_threads": false
  },
  "terminal": {
    "shell": "system",
    "copy_on_select": true
  },
  "search": {
    "regex": true
  },
  "theme": "One Light",
  "vim_mode": true,
  "relative_line_numbers": true,
  "ssh_connections": [
    {
      "host": "vm",
      "projects": [],
      "nickname": "vm"
    },
    {
      "host": "github.work",
      "projects": []
    }
  ],
  "languages": {
    "Python": {
      "language_servers": ["pyright", "!pylsp", "..."]
    }
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "Shell Script": [".env*"]
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "language_models": {
    "anthropic": {
      "api_url": "https://api.labs.dreamplug.net/anthropic",
      "available_models": [
        {
          "name": "claude-sonnet-4-20250514",
          "display_name": "Claude 4 Sonnet (CRED)",
          "max_tokens": 200000
        }
      ]
    },
    "openai": {
      "api_url": "https://api.labs.dreamplug.net",
      "available_models": [
        {
          "name": "gpt-4.1",
          "display_name": "GPT-4.1 (CRED)",
          "max_tokens": 1000000
        },
        {
          "name": "gpt-4o",
          "display_name": "GPT-4o (CRED)",
          "max_tokens": 1000000
        },
        {
          "name": "gpt-5",
          "display_name": "GPT-5 (CRED)",
          "max_tokens": 1000000
        }
      ]
    }
  }
}
