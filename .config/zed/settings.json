// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "terminal": {
    "shell": "system",
    "env": {
      "FZF_DEFAULT_OPTS": "--color=light"
    }
  },
  "search": {
    "regex": true
  },
  "theme": "One Light",
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_size": 13,
  "ui_font_size": 13,
  "ssh_connections": [
    {
      "host": "vm",
      "projects": [],
      "nickname": "vm"
    }
  ],
  "languages": {
    "Python": {
      "language_servers": ["pyright", "!pylsp", "..."]
    }
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "Shell Script": [".env*"]
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "language_models": {
    "openai": {
      "api_url": "https://api.labs.dreamplug.net",
      "version": "1",
      "available_models": [
        {
          "name": "gemini-2.5-pro",
          "display_name": "Gemini 2.5 Pro (CRED)",
          "max_tokens": 1000000
        },
        {
          "name": "gpt-4.1",
          "display_name": "GPT-4.1 (CRED)",
          "max_tokens": 1000000
        },
        {
          "name": "gpt-4o",
          "display_name": "GPT-4o (CRED)",
          "max_tokens": 1000000
        },
        {
          "name": "claude-3.7-sonnet",
          "display_name": "Claude 3.7 Sonnet (CRED)",
          "max_tokens": 200000
        },
        {
          "name": "claude-4-sonnet",
          "display_name": "Claude 4 Sonnet (CRED)",
          "max_tokens": 200000
        }
      ]
    }
  }
}
